<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#50B3DE"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/favPetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/favQuoteRadioButton"
        android:layout_marginTop="22dp"
        android:background="#000000"
        android:textColor="#ED2895"
        android:text="My Favorite Pet" />

    <RadioButton
        android:id="@+id/favQuoteRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/favPetButton"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:textColor="#ED2895"
        android:text="See My Favorite Quote" />

    <Spinner
        android:id="@+id/chooseMeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/favPetButton"
        android:layout_below="@+id/favPetButton"
        android:prompt="@string/spinner_prompt"
        android:entries="@array/spinner_array"
        android:spinnerMode="dialog" />

    <Button
        android:id="@+id/alertButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chooseMeSpinner"
        android:layout_below="@+id/chooseMeSpinner"
        android:background="#000000"
        android:textColor="#ED2895"
        android:text="Alert!" />

</RelativeLayout>
